<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Sign Up - Royal Panda</title>
    <script src="https://cdn.tailwindcss.com"></script>
  </head>

  <body class="bg-red-100 min-h-screen flex flex-col">
    <!-- Navbar -->
    <%- include('../partials/nav', { cartCount: 0 }) %>

    <!-- Main Signup Form -->
    <main class="flex-grow flex justify-center items-center py-12">
      <div class="bg-white shadow-lg rounded-2xl p-8 w-full max-w-md">
        <h2 class="text-3xl font-bold text-red-600 text-center mb-6">Sign Up</h2>

        <% if (typeof errors !== 'undefined' && errors.length > 0) { %>
          <div class="mb-4 p-4 bg-red-100 border border-red-400 text-red-700 rounded">
            <ul class="list-disc list-inside">
              <% errors.forEach(function(error) { %>
                <li><%= error %></li>
              <% }); %>
            </ul>
          </div>
        <% } %>

        <form action="/auth/signup" method="POST" class="space-y-4">
          <!-- Name -->
          <div>
            <label class="block text-sm font-semibold mb-1">Name</label>
            <input
              type="text"
              name="name"
              value="<%= oldInput ? oldInput.name : '' %>"
              required
              class="w-full border border-gray-300 rounded-lg px-3 py-2 focus:ring-2 focus:ring-red-400"
              placeholder="Enter your name"
            />
          </div>

          <!-- Mobile -->
          <div>
            <label class="block text-sm font-semibold mb-1">Mobile Number</label>
            <input
              type="tel"
              name="mobile"
              value="<%= oldInput ? oldInput.mobile : '' %>"
              required
              maxlength="10"
              class="w-full border border-gray-300 rounded-lg px-3 py-2 focus:ring-2 focus:ring-red-400"
              placeholder="Enter 10-digit mobile"
            />
          </div>

          <!-- Password -->
          <div>
            <label class="block text-sm font-semibold mb-1">Password</label>
            <input
              type="password"
              name="password"
              required
              class="w-full border border-gray-300 rounded-lg px-3 py-2 focus:ring-2 focus:ring-red-400"
              placeholder="Enter password"
            />
          </div>

          <!-- Confirm Password -->
          <div>
            <label class="block text-sm font-semibold mb-1">Confirm Password</label>
            <input
              type="password"
              name="confirmPassword"
              required
              class="w-full border border-gray-300 rounded-lg px-3 py-2 focus:ring-2 focus:ring-red-400"
              placeholder="Confirm password"
            />
          </div>

          <!-- Hidden Role Field -->
          <input type="hidden" name="role" value="user" />

          <!-- Submit -->
          <div class="pt-4">
            <button
              type="submit"
              class="w-full bg-red-500 hover:bg-red-600 text-white font-semibold py-2 rounded-lg transition"
            >
              Sign Up
            </button>
          </div>
        </form>

        <p class="text-center text-sm mt-4">
          Already have an account?
          <a href="/auth/login" class="text-red-500 hover:underline">Sign In</a>
        </p>
      </div>
    </main>
  </body>
</html>
